<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header class="mainColor">
    <h1><%= title %></h1>
  </header>
<main>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Comentario</th>
                <th>IP</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach(contact => { %>
                <tr>
                    <td><%= contact.id %></td>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.comment %></td>
                    <td><%= contact.ip_address %></td>
                    <td><%= contact.created_at %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>
</body>
</html>
